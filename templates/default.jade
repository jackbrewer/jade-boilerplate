doctype
html.no-js(lang='en')
  head
    include includes/document-head

  body

    //- Ensure correct config are set for ALL environments before uncommenting.
    //- include includes/analytics

    block body-start

    block a11y-navigation
      include layout/a11y-navigation

    .centering

      block main-header
        include layout/main-header

      block main-navigation
        include layout/main-navigation

      main#content.main-content(role='main')
        block content

      block main-footer
        include layout/main-footer

    block body-end

    //- Remove if jQuery will be bundled with index.js
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="/assets/js/lib/vendor/jquery-1.11.0.min.js"><\/script>')

    block scripts
      script(src=versionPath('/assets/js/build/index.js'))
